{{> header}}

<body>
    <header>
        <div class="container">
            <div class="header">
                <div class="logo">
                    <a href="/home">GUTE - Admin</a>
                </div>
                <div class="log-out">
                    <a href="/">Çıxış et<i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
        </div>
    </header>
    <div class="wrapper">
        <aside>
            <nav class="menu">
                <ul>
                    <li>
                        <a href="/home">Ana səhifə</a>
                    </li>
                    <li>
                        <a href="/notification">Bildirişlər</a>
                    </li>
                    <li class="active">
                        <a href="/guess">Təxminlər</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <section>
            <div class="container2">
                <div class="welcome">
                    Yeni təxmin
                </div>
                <a style="text-decoration: none; display: inline-block; border-radius: 5px; font-size: .8rem; background-color: #34495e; color: #fff; padding: 4px 6px; font-weight: bold; margin-top: 5px;"
                    href="/guess">Geri qayıt</a>
                <div class="match-content">
                    <div class="match-title">
                        Oyun əlavə et
                    </div>
                    <div class="match-area">
                        <form method="POST">
                            <div class="match-form">
                                <div class="input-group">
                                    <div class="input-label">
                                        <label for="teamname">Ev komandası
                                            <input id="teamname" type="text" name="homeTeam" value="{{data.homeTeam}}"
                                                placeholder="Ev sahibi komandası Nümunə: Qarabağ" required>
                                        </label>
                                    </div>

                                    <div class="input-label">
                                <label for="dep-team-name">Qonağ komandası
                                            <input id="dep-team-name" type="text" name="guestTeam" value="{{data.guestTeam}}"
                                                placeholder="Qonağ komandası Nümunə: Real Madrid" required>
                                        </label>
                                    </div>
                                </div>

                                <div class="input-group">
                                    <div class="input-label">
                                        <label class="check"  for="pause">Gözləmədə
                                            <input class="cbox" id="pause" name="gender" value="0" required type="radio" checked>
                                        </label class="check">
 
                                        <label class="check" for="true">Tutdu
                                            <input class="cbox" id="true" name="gender" value="1" required type="radio" {{#if (eq data.gameStatus 1)}} checked {{/if}}>
                                        </label>
    
                                        <label class="check" for="false">Tutmadı
                                            <input class="cbox" id="false" name="gender" value="2" required type="radio"{{#if (eq data.gameStatus 1)}} checked {{/if}}>
                                        </label>
                                    </div>
                                </div>

                                <div class="input-group">
                                    <div class="input-label">
                                        <label for="">Oyun tarixi
                                            <input type="date" name="gameDate" required>
                                        </label>
                                    </div>

                                    <div class="input-label">
                                        <label for="matchhour">Oyun saatı
                                            <input id="matchhour" name="gameHour" type="text" placeholder="22:00" value="{{data.gameHour}}" required>
                                        </label>
                                    </div>
                                </div>

                                <div class="input-group">
                                    <div class="input-label">
                                        <label for="">Təxmin
                                            <input type="text" name="gameGuess" placeholder="Təxminin nədir?" value="{{data.gameGuess}}"  required>
                                        </label>
                                    </div>

                                    <div class="input-label">
                                        <label for="">Təxmin əmsalı
                                            <input type="text" name="gameCoefficient" placeholder="Təxmin əmsalı" value="{{data.gameCoefficient}}"  required>
                                        </label>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <div class="input-label">
                                         <label for="notText">Təxmin şərhi (əgər yoxdursa, boş burax)
                                            <textarea required name="gameText" id="notText" cols="3" rows="7" style="width:100%; resize:none">{{data.gameText}}</textarea>
                                        </label>
                                    </div>
                                </div>
                                <input class="submit" type="submit" value="Göndər">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
</body>

</html>