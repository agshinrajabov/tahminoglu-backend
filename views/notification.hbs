            </nav>
        </aside>
        <section>
            <div class="container2">
                <div class="welcome">
                    Hesablar
                </div>
                <div class="post-content">
                    <div class="post-content-title">
                        Sosyal medya hesablarının linklərini dəyişdirə bilərsən
                    </div>
                </div>

                <div class="notification">
                    <div class="notification-title">
                        Hesablar
                    </div>

                    <div class="notification-form">
                        <form action="/socials" method="POST">
                            <label for="notTitle">Facebook
                                <input required name="facebook" id="notTitle" type="text" minlength="6" maxlength="25" value="{{facebook}}" placeholder="http://">
                            </label>
                             <label for="notTitle">Instagram
                                <input required name="instagram" id="notTitle" type="text" minlength="6" maxlength="25"  value="{{instagram}}" placeholder="http://">
                            </label>
                             <label for="notTitle">Telegram
                                <input required name="telegram" id="notTitle" type="text" minlength="6" maxlength="25"  value="{{telegram}}" placeholder="http://">
                            </label>
                             <label for="notTitle">Blog
                                <input required name="blog" id="notTitle" type="text" minlength="6" maxlength="25"  value="{{blog}}" placeholder="http://">
                            </label>
                             <label for="notTitle">Pinterest
                                <input required name="pinterest" id="notTitle" type="text" minlength="6" maxlength="25" value="{{pinterest}}"  placeholder="http://">
                            </label>
                            <input type="submit" value="Yenilə">
                        </form>
                    </div>
                </div>
            </div>
        </section>
</body>

</html>